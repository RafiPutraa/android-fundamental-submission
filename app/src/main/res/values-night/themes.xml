<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAndroidFundamentalSubmission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryVariant">@color/appPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03A9F4</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/texgyreadventorregular</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/cardPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewReverse">
        <item name="android:textColor">@color/cardPrimary</item>
    </style>

    <style name="CardBackground">
        <item name="android:backgroundTint">@color/cardPrimary</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/all_rounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="searchHintIcon">@drawable/baseline_search_24</item>
        <item name="searchIcon">@drawable/baseline_search_24_white</item>
        <item name="closeIcon">@drawable/baseline_clear_24</item>
    </style>
</resources>